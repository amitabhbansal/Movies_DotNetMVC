@model Movie
@{
    ViewBag.Title = $"{ViewBag.Action}";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">@ViewBag.Action Movie</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @if (ViewData.ModelState?.IsValid == false)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.ValidationSummary()
                </div>
            }

            <!-- Movie Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Movie Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter movie name" />
            </div>

            <!-- Year -->
            <div class="mb-3">
                <label asp-for="Year" class="form-label">Release Year</label>
                <input asp-for="Year" class="form-control" placeholder="Enter release year" />
            </div>

            <!-- Genre -->
            <div class="mb-3">
                <label asp-for="GenreId" class="form-label">Genre</label>
                <select asp-for="GenreId" class="form-select">
                    <option value="">-- Select Genre --</option>
                    @foreach (var genre in ViewBag.Genres)
                    {
                        <option value="@genre.GenereId">@genre.GenereName</option>
                    }
                </select>
            </div>

            <!-- Rating -->
            <div class="mb-3">
                <label asp-for="Rating" class="form-label">Rating</label>
                <input asp-for="Rating" class="form-control" placeholder="Enter rating (1-10)" />
            </div>

            <!-- Hidden Movie ID -->
            <input type="hidden" asp-for="MovieId" />

            <!-- Action Buttons -->
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-check-circle"></i> Submit
                </button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
